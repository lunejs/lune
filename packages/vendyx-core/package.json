{
  "name": "@vendyx/core",
  "version": "0.0.1",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && tsc --build build.tsconfig.json && tsc-alias && gulp -f ./scripts/post-build.ts postBuild",
    "start": "node -r tsconfig-paths/register -r ts-node/register dist/index.js",
    "start:dev": "nodemon",
    "test": "dotenv -e .env.test bash ./scripts/it-tests.sh",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint .",
    "gen:types": "graphql-codegen --config ./scripts/gen-types.ts",
    "migrate:local": "dotenv -e ./database/.env.migration.local -- knex migrate:latest --env local --knexfile ./database/knexfile.ts"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^7.0.1",
    "@vendyx/common": "*",
    "bcrypt": "^6.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.0.0",
    "express": "4.21.2",
    "graphql": "^16.11.0",
    "graphql-yoga": "^5.13.5",
    "gulp": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "nanoid": "3.3.4",
    "pg": "^8.16.3",
    "rimraf": "^6.0.1",
    "sharp": "^0.34.3",
    "slugify": "^1.6.6",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/gulp": "^4.0.17",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.10",
    "@types/supertest": "^6.0.3",
    "@vendyx/eslint-config": "*",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.30.0",
    "jest": "^30.0.3",
    "kleur": "^4.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=22.10.0"
  }
}
