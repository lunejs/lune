{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    // Change from es2017 to es2021 to support replaceAll method
    "target": "esnext",
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "paths": {
      "@/*": ["./src/*"],
      "@/tests/*": ["./tests/*"]
    }
  }
}
