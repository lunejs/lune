{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    // Change from es2017 to es2021 to support replaceAll method
    "target": "es2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["@types/jest"]
  }
}
